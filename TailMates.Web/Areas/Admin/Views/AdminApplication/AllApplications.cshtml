@using TailMates.Web.ViewModels.Admin
@model AdoptionApplicationListViewModel

@{
    ViewData["Title"] = "Admin - All Adoption Applications";
}

<div class="container my-5">
    <h1 class="display-4 fw-bold text-primary text-center mb-5">All Adoption Applications</h1>

    @if (Model != null && Model.Applications.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Application #</th>
                        <th scope="col">Applicant</th>
                        <th scope="col">Pet</th>
                        <th scope="col">Shelter</th>
                        <th scope="col">Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in Model.Applications)
                    {
                        <tr>
                            <td>@application.Id</td>
                            <td>@application.ApplicantName</td>
                            <td>@application.PetName</td>
                            <td>@application.ShelterName</td>
                            <td>@application.ApplicationDate.ToShortDateString()</td>
                            <td>
                                @{
                                    string statusClass = "";
                                    switch (application.Status)
                                    {
                                        case TailMates.Data.Models.Enums.ApplicationStatus.Pending:
                                            statusClass = "badge bg-warning text-dark";
                                            break;
                                        case TailMates.Data.Models.Enums.ApplicationStatus.Approved:
                                            statusClass = "badge bg-success";
                                            break;
                                        case TailMates.Data.Models.Enums.ApplicationStatus.Rejected:
                                            statusClass = "badge bg-danger";
                                            break;
                                        case TailMates.Data.Models.Enums.ApplicationStatus.Withdrawn:
                                            statusClass = "badge bg-secondary";
                                            break;
                                        default:
                                            statusClass = "badge bg-info";
                                            break;
                                    }
                                }
                                <span class="@statusClass">@application.Status.ToString()</span>
                            </td>
                            <td>
                                <a asp-area="Admin" asp-controller="AdminApplication" asp-action="Details" asp-route-id="@application.Id" class="btn btn-sm btn-info text-white">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination pagination-sm">
                    <li class="page-item @(!Model.Applications.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link"
                           asp-area="Admin"
                           asp-controller="AdminApplication"
                           asp-action="AllApplications"
                           asp-route-pageIndex="@(Model.Applications.PageIndex - 1)"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.Applications.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.Applications.PageIndex ? "active" : "")">
                            <a class="page-link"
                               asp-area="Admin"
                               asp-controller="AdminApplication"
                               asp-action="AllApplications"
                               asp-route-pageIndex="@i">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @(!Model.Applications.HasNextPage ? "disabled" : "")">
                        <a class="page-link"
                           asp-area="Admin"
                           asp-controller="AdminApplication"
                           asp-action="AllApplications"
                           asp-route-pageIndex="@(Model.Applications.PageIndex + 1)"
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5 mt-5 rounded shadow-sm">
            <p class="lead mb-3">No adoption applications found.</p>
        </div>
    }
</div>