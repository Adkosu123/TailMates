@model ErrorViewModel
@{
    ViewData["Title"] = "Server Error";
    Layout = "_Layout";
}

<div class="d-flex align-items-center justify-content-center vh-100 text-center">
    <div>
        <h1 class="fw-bold text-danger" style="font-size: 10rem;">500</h1>
        <p class="fs-3"><span class="text-danger" style="font-size: 2.5rem;">Oops!</span> Something went wrong.</p>
        <p class="lead">
            An unexpected error occurred while processing your request.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go Home</a>
    </div>
</div>