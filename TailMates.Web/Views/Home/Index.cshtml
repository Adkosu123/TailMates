@{
    ViewData["Title"] = "Welcome to Our Pet Shelter";
}

<div class="container">
    <div class="p-5 mb-4 rounded-3 shadow-lg home-hero-section">
        <div class="container-fluid py-5">
            <div class="row align-items-center">
                <div class="col-lg-12 text-center text-white">
                    <h1 class="display-4 fw-bold mb-3 text-white">TailMates Pet Shelter</h1>
                    <p class="fs-5 mb-4">Providing a loving home for every animal in need.</p>
                    <a asp-area="" asp-controller="Home" asp-action="AdoptionProcess" class="btn btn-warning btn-lg me-3 btn-hover-move">Start Your Adoption Journey</a>
                    <a asp-area="" asp-controller="Pet" asp-action="All" class="btn btn-outline-light btn-lg me-3 btn-hover-move">View All Adoptable Pets</a>
                </div>
            </div>
        </div>
    </div>

    <h2 class="display-5 text-center fw-bold text-primary mb-5 mt-5">Why Adopt from TailMates?</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        <div class="col">
            <div class="card h-100 shadow-sm rounded-3 border bg-light shelter-card-hover">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-heart-fill text-danger mb-3" style="font-size: 3em;"></i>
                    <h3 class="h5 fw-bold text-primary mb-2">Compassionate Care</h3>
                    <p class="card-text text-muted">Every animal at TailMates receives top-notch veterinary care, nutrition, and lots of love from our dedicated staff and volunteers.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm rounded-3 border bg-light shelter-card-hover">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-check-circle-fill text-success mb-3" style="font-size: 3em;"></i>
                    <h3 class="h5 fw-bold text-primary mb-2">Easy Adoption Process</h3>
                    <p class="card-text text-muted">Our streamlined adoption process makes it simple to find your perfect match. We guide you every step of the way.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm rounded-3 border bg-light shelter-card-hover">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-hand-thumbs-up-fill text-info mb-3" style="font-size: 3em;"></i>
                    <h3 class="h5 fw-bold text-primary mb-2">Support Beyond Adoption</h3>
                    <p class="card-text text-muted">We provide resources and advice even after adoption, ensuring a smooth transition for both you and your new family member.</p>
                </div>
            </div>
        </div>
    </div>

    <h2 class="display-5 text-center fw-bold text-primary mb-4">Our Mission</h2>
    <p class="lead text-center text-muted mx-auto mb-5" style="max-width: 900px;">
        At TailMates, our mission is to create a nurturing environment for abandoned and neglected animals,
        facilitating their journey to forever homes where they can thrive and bring joy. We believe every paw deserves a purpose.
    </p>

    <div class="text-center mb-5">
        <a asp-area="" asp-controller="Shelter" asp-action="All" class="btn btn-warning btn-lg btn-hover-move">Find Your Nearest Shelter</a>
    </div>

<div class="text-center">

@section Styles {
    <link rel="stylesheet" href="~/css/homepage.css" />
}